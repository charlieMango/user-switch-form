{
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "es5",
    "bracketSameLine": true,
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrder": [
        "^[react]",
        "^./hooks",
        "^~/icons",
        "^@(?!/)",
        "^@/entities",
        "^@/features",
        "^@/widget",
        "^@/shared",
        "^./ui",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
